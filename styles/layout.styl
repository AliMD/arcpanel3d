/* Header section
-------------------------------------------------- */
header
  div.head-line
	  position :fixed
	  top      :0
	  left     :0
	  right    :0
	  z-index  :3
	  opacity  :0.95
	  height   :23px
	  background-image:url(images/top_bg.png)

/* Footer section
-------------------------------------------------- */

footer
	position :fixed
	bottom   :0
	left     :0
	right    :0
	opacity  :1
	z-index  :2
	height   :45px
	color    :#222
	background-image  :url(images/bot_bg.png)
	background-size   :contain
	background-repeat :repeat-x