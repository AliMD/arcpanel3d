/* Menu section
-------------------------------------------------- */
section.aside
	absolute top 40px left 10px
	z-index: 2
  div.top-bg
	  image : 'images/top-nav.png'
	  height:35px
	  width:231px
	  background-size:100% 100%
  div.bot-bg
	  image : 'images/bot-nav.png'
	  height:54px
	  width:231px
	  background-size:100% 100%

nav.menu
	width:228px
	min-height:450px
	padding-top:1px
	image:'images/nav-bg.png'
	background-repeat: repeat-y
  div.logo
	  image:'images/logo.png'
	  background-size:100% 100%
	  background-position:center top
	  background-repeat:no-repeat
	  width:200px
	  height:65px
	  margin-top:30px
	  overflow:hidden
	  margin-left: auto
	  margin-right: auto
    h1
	    text-indent:-50000px
	    white-space: nowrap

nav.menu menu
	margin-top:55px
	width:184px
	margin-left: auto
	margin-right: auto
  li
	  image : 'images/li-bg.png'
	  height:38px
  &:hover /*in lanati kojash eshtebahe :@*/
	a
		  image : 'images/nav_hover.png'
    a
	    display:block
	    padding-bottom:10px
	    padding-top:10px
	    text-decoration:none
	    color:#FFF
	    font-size:15px
	    letter-spacing:2px
	    font-family:"Times New Roman", Times, serif
	    font-weight:bold
	    text-align:center
	    text-transform:uppercase
	    text-shadow: 2px 2px 1px black

nav.menu li a:active
	color:gray

/* SlideShow section
-------------------------------------------------- */

section.slideshow
  div.noise
	  position :fixed
	  top      :0
	  left     :0
	  right    :0
	  bottom   :0
	  z-index  :-1
	  background-position :left top
	  background-repeat   :repeat
	  image : 'images/picefct.png'

  div.backimg
    div.slideshow
	    position :fixed
	    top      :0
	    left     :0
	    right    :0
	    bottom   :0
	    z-index  :-2
	    background-position :center center
	    background-repeat   :no-repeat
	    background-size     :cover

/* RightPanel section
-------------------------------------------------- */

menu.right-panel
	fixed top bottom
	right:10px
	width:190px
	image : 'images/slide-bg.png'
	padding-top:1px
	opacity:.5
	transition:opacity 800ms
	&:hover /*ah ahhhh che ghadr gher o fer dare hover to stylus to less aslan Ejor nis*/
		opacity:1


menu.right-panel > li /*how to write it with stylus?*/
	height:91px
	width:161px
	padding-top:20px
	background-repeat:no-repeat
	margin: 0 auto